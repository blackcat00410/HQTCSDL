                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Chỉnh sửa chương trình khuyến mãi</h3>
                        </div>
                        <!-- /.box-header -->
                    </div>
                    <!-- /.box -->
                </div>

                <!--Content of Categories-->
                <div class="col-xs-12">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="form-group" style="width:30%">
                                @Html.LabelFor(model => model.makhuyenmai)
                                @Html.EditorFor(model => model.makhuyenmai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.makhuyenmai, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="width:30%">
                                @Html.LabelFor(model => model.thoigianbatdau)
                                    @Html.EditorFor(model => model.thoigianbatdau, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.thoigianbatdau, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="width:30%">
                                @Html.LabelFor(model => model.thoigianketthuc)
                                @Html.EditorFor(model => model.thoigianketthuc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.thoigianketthuc, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="width:30%">
                                @Html.LabelFor(model => model.noidung)
                                @Html.EditorFor(model => model.noidung, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.noidung, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="width:30%">
                                @Html.LabelFor(model => model.chitiet)
                                @Html.EditorFor(model => model.chitiet, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.chitiet, "", new { @class = "text-danger" })
                            </div>
                            <div class="pull-right">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-danger" />
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-default" style="text-decoration:none">@Html.ActionLink("Back to List", "Index")</button>
                            </div>
                        </div>
                        <!-- /.box-footer -->
                    </div>
                    <!-- /. box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
}
