@model Test1.EF.danhmucsanpham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Nội dung
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Chỉnh sửa danh mục</h3>
                    </div>
                    <!-- /.box-header -->
                </div>
                <!-- /.box -->
            </div>

            <!--Content of Categories-->
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="form-group" style="width:30%">
                            @Html.LabelFor(model => model.madanhmuc)
                            @Html.EditorFor(model => model.madanhmuc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.madanhmuc, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:30%">
                            @Html.LabelFor(model => model.tendanhmuc)
                            @Html.EditorFor(model => model.tendanhmuc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.tendanhmuc, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:30%">
                            @Html.LabelFor(model => model.madanhmuccha)
                            @Html.EditorFor(model => model.madanhmuccha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.madanhmuccha, "", new { @class = "text-danger" })
                        </div>
                        <div class="pull-right">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-danger" />
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-default" style="text-decoration:none">@Html.ActionLink("Back to List", "Index")</button>
                        </div>
                   </div>
                    <!-- /.box-footer -->
                </div>
                <!-- /. box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
}
